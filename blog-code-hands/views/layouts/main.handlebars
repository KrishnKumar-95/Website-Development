<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Code Hands</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&display=swap');
      *{
          font-family: Ubuntu;
          margin: 0;
          padding: 0;
          }
      *, :before,:after{
          box-sizing: border-box;
          }
      #ul{
          display: flex;
          flex-direction: row;
          position: absolute;
          right: 180px
          }
      .nav-item{ 
          font-size: 17px; 
          text-decoration: none; 
          list-style-type: none;
          margin: 0 5px;
      }
      a{ 
          text-decoration: none; 
          }
    .head-text>a:active{
          color:#5b2156;
          }
      li>a{
        color: black;
      }
      .head-text{
            display: flex;
            align-items: center;
            font-size: 20px;
            font-weight: bolder;
            justify-content: center;
            width: 200px;
            color: #5b2156;
          }
      .navmenu{
        display: flex;
        flex-direction: row;
        height: 83px;
        box-shadow: 0 1px 3px rgb(0 0 0 / 0.2);
      }
      .nav-items{
        display: flex;
        align-items: center;
      }
      body{
        height: 2000px;
      }
      .body-content{
        padding: 23px 23px;
        width: 50%;
        display: flex;
        justify-content: center;
        flex-direction: column;
        height: 300px;
        padding: 0 5rem;
      }
      .body-content h2{
        color: rgba(27, 27, 27, 0.959);
        line-height: 55px;
      }
      .body-content span{
        color: #6d28d9;
      }
      .body-content p{
        line-height: 25px;
        color: #6b7280;
      }
      .btn{
        color: white;
        background-color: #6d28d9;
        background-color: #04aa6d;
        margin: 0 4px;
        padding: 10px 12px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 7px;
        border: transparent;
      }
      .btn-box{
        position: absolute;
        right: 15px;
      }
      .heading{
        font-size: 35px;
      }
      .content-btn{
        margin-top: 24px;
      }
      .content-btn1{
        background-color: #111827;
        color: #E5E7EB;
        padding: 12px 16px;
        font-weight: bold;
        border-radius: 5px;
        border: transparent;
      }
      .content-btn2{
        background-color: #D1D5DB;
        color: #111827;
        padding: 12px 16px;
        font-weight: bold;
        border-radius: 5px;
        border: transparent;
      }
    </style>
  </head>
  <body>
    <header class="header">
      <nav class="navbar">
        <div class="navmenu">
          <span class="head-text"><a href="/">CodeWithHarry</a></span>
          <div class="nav-items">
            <ul id="ul">
              <li class="nav-item"><a href="/">Home</a></li>
              <li class="nav-item"><a href="/blogs">Blogs</a></li>
              <li class="nav-item"><a href="/service">Services</a></li>
              <li class="nav-item"><a href="/contact">Contact</a></li>
            </ul>
            <div class="btn-box">
              <button type="button" class="btn">Login</button>
              <button type="button" class="btn">Signup</button>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <div class="body-content">
    {{{body}}}
    <div class="content-btn">
    <button class="content-btn1">Free Courses</button>
    <button class="content-btn2">Explore Blog</button>
    </div>
    </div>
  </body>
</html>